<!DOCTYPE html>
<html>
<head>
  <title>ContactsApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
 <ul class="nav navbar-nav navbar-right">
 <% if current_user %>
 <%= current_user.name %>
 <% end %>
      <% unless current_user %>
        <li><a href="/signup">Sign up</a></li>
      <% end %>
      <% unless current_user %>
        <li><a href="/login">Log in</a></li>
      <% end %>
      <% if current_user %>  
        <li><a href="/logout">Log out</a></li>
      <% end %> 
          </ul>
        </li>
</ul>

<li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
          <ul class="#">
          <% Group.all.each do |group| %>
            <li><a href="/contacts?group_id=<%= group.id %>"><%= group.name %></a></li>
            <% end %>
            <li><a href="#">Another action</a></li>
            <li><a href="#">Something else here</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">Separated link</a></li>
          </ul>
        </li>

<div class = "container">

  <% flash.each do |name, message| %>
    <div class="alert alert-<%= name %> alert-dismissible fade in" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">&times;</span><span class="sr-only">Close</span></button>
    <%= message.html_safe %>
    </div>
    <% end %>

<%= yield %>

</body>
</html>
